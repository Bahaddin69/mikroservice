{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2016",
        "types": [
            "jest"
        ],
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "jest.config.ts",
        "drizzle.config.ts"
    ],
    "include": [
        "src/**/*"
    ]
}